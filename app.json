{
  "name": "shotnr",
  "description": "A url shortening web app",
  "scripts": {
    "postdeploy":"bundle exec rake db:migrate",
    "pr-predestroy": "bin/teardown"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "TWITTER_KEY": {
      "required": true
    },
    "TWITTER_SECRET": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
