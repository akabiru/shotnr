<%= form_for(@link, remote: true) do |f| %>
  <%= token_tag(nil) %>
  <fieldset id="link-form-group" class="form-group">
    <%= f.text_field :actual, class: 'form-control landing-text-field',
          placeholder: 'http://shotnr.com', type: 'url', required: true %>
    <label id="link-string-status" class="form-control-label"></label>
  </fieldset>
  <fieldset class="checkbox">
    <label for="checkbox">
      <%= f.check_box :active %>
      Active
    </label>
  </fieldset>
  <fieldset id="vanity-string-form-group" class="form-group">
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon3">shotnr.com/</span>
      <%= f.text_field :vanity_string, class: 'form-control',
        placeholder: 'optional custom url e.g. andela', id: 'vanity-string' %>
    </div>
    <label id="vanity-string-status" for="vanityStringStatus" class="form-control-label"></label>
  </fieldset>
  <%= f.submit "Update", class: 'btn btn-success' %>
<% end %>
