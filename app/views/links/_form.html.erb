<%= form_for(@link, remote: true) do |f| %>
  <%= token_tag(nil) %>
  <% if logged_in? %>
  <div id="actual-link-form-group" class="form-group row">
    <div class="col-sm-12">
      <%= f.text_field :actual, class: 'form-control landing-text-field',
          placeholder: 'http://shotnr.com', type: 'url', required: true %>
      <label id="actual-link-status" class="form-control-label"></label>
    </div>
  </div>
  <div id="vanity-string-form-group" class="form-group row">
    <div class="col-sm-10">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon3">shotnr.com/</span>
        <%= f.text_field :vanity_string, class: 'form-control',
          placeholder: 'custom url', id: 'vanity-string' %>
      </div>
    </div>
    <div class="col-sm-2">
      <%= f.submit "shotn!", class: 'btn btn-success btn-block', id: 'submit_link' %>
    </div>
    <label id="vanity-string-status" for="vanityStringStatus" class="form-control-label"></label>
  </div>
  <% else %>
    <div class="form-group">
      <div class="input-group">
        <%= f.text_field :actual, class: 'form-control landing-text-field',
          placeholder: 'http://shotnr.com', type: 'url', required: true %>
        <span class="input-group-btn">
          <%= f.submit "shotn!", class: 'btn btn-success' %>
        </span>
      </div>
      <label id="actual-link-status" class="form-control-label text-danger" style="display:none;"></label>
    </div>
  <% end %>
<% end %>
